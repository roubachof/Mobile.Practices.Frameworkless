<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_two_lines_height"
    android:paddingLeft="@dimen/spacing_medium"
    android:paddingRight="@dimen/spacing_medium"
    android:paddingTop="@dimen/spacing_medium"
    android:paddingBottom="@dimen/spacing_small"
    android:background="@drawable/selectable_background_white">
    <ImageView
        android:id="@+id/image_silly"
        android:layout_width="@dimen/image_avatar_size"
        android:layout_height="@dimen/image_avatar_size"
        android:layout_marginRight="@dimen/spacing_medium"
        android:src="@drawable/silly_48dp" />
    <TextView
        android:id="@+id/text_name"
        style="@style/TextView.Subhead"
        android:layout_toRightOf="@id/image_silly"
        android:layout_alignTop="@id/image_silly"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:text="Name of the silly dude" />
    <TextView
        android:id="@+id/text_description"
        style="@style/TextView.Body.Secondary"
        android:layout_toRightOf="@id/image_silly"
        android:layout_below="@id/text_name"
        android:text="Description of the dude" />
</RelativeLayout>